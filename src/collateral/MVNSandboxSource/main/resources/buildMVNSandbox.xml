<?xml version="1.0"?>
<!DOCTYPE project>
<project name="MVNSandbox" default="none" xmlns:current="ant:current">

  <!--+ ==============================================================================================================
      | Public targets.
      +-->
  
  <target name="debug" depends="init" description="echo properties to target/temp directory">
    <property name="temp.dir" value="${basedir}/target/temp" />
    
    <echoproperties />
    <mkdir dir="${temp.dir}" />
    <echoproperties destfile="${temp.dir}/EclipseAnt.properties" />
  </target>
	
  <!--+ ==============================================================================================================
      | Protected targets
      +-->
  
  <target name="none" depends="init" description="passive default. Just initializes" >
    
 </target>

  <target name="zip.source" depends="init">
  	<zip destfile="${basedir}/target/temp/MVNSandboxSource.zip">
  	    <fileset dir="src"/>
  	    <fileset dir="." includes=".classpath,.gitignore,.project,build.xml,pom.xml"/>
  	</zip>
  </target>

  <target name="init" >
  </target>
  
  
</project>